{
	"manifest_version": 2,
	"name": "nyaa addon",
	"version": "1.0.0",
	"permissions": ["activeTab", "tabs", "storage"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://*.nyaa.si/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"browser_action": {
		"default_icon": "icon.png"
	},
	"web_accessible_resources": [
		"css/style.css"
	]
}
